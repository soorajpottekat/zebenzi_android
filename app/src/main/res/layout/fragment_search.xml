<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zebenzi_white"
    tools:context="com.zebenzi.ui.Search"
    android:clickable="false">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/searchText"-->
            <!--android:hint="I&apos;m looking for"-->
            <!--android:visibility="visible" />-->

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Go"-->
            <!--android:id="@+id/searchButton"-->
            <!--android:visibility="visible" />-->

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/panel_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="5dp"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="@color/zebenzi_black"
                android:text="Price"
                android:id="@+id/search_results_quote_price"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/zebenzi_light_grey"
                android:text="Service"
                android:id="@+id/search_results_quote_service"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/zebenzi_light_grey"
                android:text="Units"
                android:id="@+id/search_results_quote_units"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/zebenzi_light_grey"
                android:text="Units"
                android:id="@+id/search_results_quote_date"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/zebenzi_light_grey"
                android:text="Units"
                android:id="@+id/search_results_quote_time"
                android:paddingLeft="20dp"/>

        </LinearLayout>

        <!-- Search progress -->
        <ProgressBar android:id="@+id/search_progress" style="?android:attr/progressBarStyleLarge"
                     android:layout_width="match_parent" android:layout_height="wrap_content"
                     android:layout_marginBottom="8dp" android:visibility="gone"
                     android:layout_weight="0" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchResultsList"
            android:layout_gravity="bottom" />
    </LinearLayout>

</RelativeLayout>
