<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:background="@drawable/nav_drawer_background"
                android:orientation="vertical"
                android:weightSum="1"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_drawer_header_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/profile_vaugan"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/zebenzi_white"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/nav_drawer_header_icon"
        android:layout_toEndOf="@+id/nav_drawer_header_icon">

        <TextView
            android:id="@+id/nav_drawer_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/zebenzi_white"
            android:text="Vaugan Nayagar"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/nav_drawer_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zebenzi_white"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:text="5 jobs, 2 reviews"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="normal"
            />
    </LinearLayout>

</RelativeLayout>