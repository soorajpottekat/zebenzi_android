<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:background="@drawable/nav_drawer_background"
                android:orientation="vertical"
                android:weightSum="1"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigationDrawerHeaderIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/profile_vaugan"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/material_grey_100"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/navigationDrawerHeaderIcon"
        android:layout_toEndOf="@+id/navigationDrawerHeaderIcon">
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/navigationDrawerHeaderIcon"-->
            <!--android:paddingLeft="16dp"-->
            <!--android:src="@drawable/profile"/>-->

        <TextView
            android:id="@+id/navigationDrawerHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/material_grey_100"
            android:text="Vaugan Nayagar"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/navigationDrawerHeaderEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_100"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:text="5 jobs, 2 reviews"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="normal"

            />
    </LinearLayout>

