<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:background="@drawable/nav_drawer_background"
                android:orientation="vertical"
                android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/navigationDrawerHeaderIcon"
            android:paddingLeft="16dp"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/navigationDrawerHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:text="Vaugan Nayagar"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/navigationDrawerHeaderEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:text="vaugann@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="normal"

            />
    </LinearLayout>

