<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/workerImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/profile_vaugan"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/zebenzi_light_grey"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FirstName"
        android:id="@+id/workerFirstName"
        android:textColor="@color/zebenzi_dark_grey"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/workerImage"
        android:layout_toEndOf="@+id/workerImage"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LastName"
        android:id="@+id/workerLastName"
        android:textColor="@color/zebenzi_dark_grey"
        android:layout_alignTop="@+id/workerFirstName"
        android:layout_toRightOf="@+id/workerFirstName"
        android:layout_toEndOf="@+id/workerFirstName"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0846676467"
        android:id="@+id/workerContactNumber"
        android:textColor="@color/material_grey_700"
        android:layout_below="@+id/workerFirstName"
        android:layout_toRightOf="@+id/workerImage"
        android:layout_toEndOf="@+id/workerImage"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/hireButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hire_me"
        android:layout_gravity="center_vertical"
        style="@style/materialButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Worker Address"
        android:id="@+id/workerAddress"
        android:textColor="@color/material_grey_700"
        android:layout_below="@+id/workerImage"
        android:layout_alignLeft="@+id/workerContactNumber"
        android:layout_alignStart="@+id/workerContactNumber"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Worker ID"
        android:id="@+id/workerID"
        android:textColor="@color/material_grey_700"
        android:layout_below="@+id/hireButton"
        android:layout_toRightOf="@+id/account_image"
        android:layout_toEndOf="@+id/account_image"
        android:visibility="gone"/>
</RelativeLayout>
