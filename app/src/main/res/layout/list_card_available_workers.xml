<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/available_workers_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/zebenzi_white"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_card_avail_workers_image"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_account"
            app:civ_border_color="@color/zebenzi_light_grey"
            app:civ_border_width="2dp"
            />

        <TextView
            android:id="@+id/list_card_avail_workers_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/list_card_avail_workers_image"
            android:layout_toRightOf="@+id/list_card_avail_workers_image"
            android:text="FirstName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/zebenzi_dark_grey"/>

        <TextView
            android:id="@+id/list_card_avail_workers_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_card_avail_workers_first_name"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/list_card_avail_workers_first_name"
            android:layout_toRightOf="@+id/list_card_avail_workers_first_name"
            android:text="LastName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/zebenzi_dark_grey"/>

        <TextView
            android:id="@+id/list_card_avail_workers_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_card_avail_workers_first_name"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/list_card_avail_workers_image"
            android:layout_toRightOf="@+id/list_card_avail_workers_image"
            android:text="4.1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/material_grey_700"/>

        <Button
            android:id="@+id/list_card_avail_workers_hire_button"
            style="@style/materialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="@string/hire_me"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>