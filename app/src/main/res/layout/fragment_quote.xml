<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zebenzi_splash"
    tools:context="com.zebenzi.ui.Search"
    android:clickable="false">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/panel_border_opaque"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="5dp"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="@color/zebenzi_black"
                android:id="@+id/search_results_quote_price"
                android:layout_gravity="center_horizontal"
                android:phoneNumber="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/zebenzi_light_grey"
                android:id="@+id/search_results_quote_service"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/zebenzi_light_grey"
                android:id="@+id/search_results_quote_units"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/zebenzi_light_grey"
                android:id="@+id/search_results_quote_date"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/zebenzi_light_grey"
                android:id="@+id/search_results_quote_time"
                android:paddingLeft="20dp"/>

        </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_results_available_workers_list"
            android:layout_gravity="bottom"
            android:background="@drawable/panel_border_transparent"/>

        <!-- Search progress -->
        <ProgressBar android:id="@+id/search_progress" style="?android:attr/progressBarStyleLarge"
                     android:layout_width="match_parent" android:layout_height="wrap_content"
                     android:layout_marginBottom="8dp" android:visibility="gone"
                     android:layout_weight="0" />

    </LinearLayout>

</RelativeLayout>
