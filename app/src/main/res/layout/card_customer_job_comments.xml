<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/available_workers_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/zebenzi_white"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            style="@style/zebenziRatingBar"
            android:id="@+id/list_card_job_comments_rating_bar"
            android:nestedScrollingEnabled="false"
            android:numStars="5"
            android:focusable="true"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/list_card_job_comments_comment"
            android:layout_alignStart="@+id/list_card_job_comments_comment"/>

        <TextView
            android:id="@+id/list_card_job_comments_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LastName"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/zebenzi_light_grey"
            android:layout_below="@+id/list_card_job_comments_rating_bar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>