<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_100"
    tools:context="com.zebenzi.ui.Search"
    android:clickable="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/material_grey_300"
        android:layout_height="match_parent">

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/searchText"-->
            <!--android:hint="I&apos;m looking for"-->
            <!--android:visibility="visible" />-->

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Go"-->
            <!--android:id="@+id/searchButton"-->
            <!--android:visibility="visible" />-->


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:translationZ="5dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I need a"
                    android:id="@+id/textView"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/zebenzi_light_grey"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg_arrow"
                    android:padding="20dp"
                    android:id="@+id/new_job_service_name"
                    />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Units"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/zebenzi_light_grey"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:background="@drawable/text_field_border"
                    android:textColor="@color/zebenzi_primary_color_dark"
                    android:id="@+id/new_job_units"
                    android:inputType="number"
                    android:visibility="visible"
                    android:padding="20dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/zebenzi_light_grey"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/new_job_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_border"

                    style="@style/dateTimeButton"/>

                <!--<EditText-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:inputType="date"-->
                    <!--android:ems="10"-->
                    <!--android:id="@+id/new_job_date"-->
                    />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/zebenzi_light_grey"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/new_job_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_border"

                    style="@style/dateTimeButton"/>

                <!--<EditText-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:inputType="date"-->
                    <!--android:ems="10"-->
                    <!--android:id="@+id/new_job_time"-->
                    <!--android:selectAllOnFocus="true"/>-->
            </TableRow>

        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/new_job_get_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET QUOTE"
                android:layout_gravity="center_horizontal"
                style="@style/materialButton"
                android:textSize="22sp"
                android:padding="20dp"/>
        </TableRow>

    </LinearLayout>


</RelativeLayout>
