    <Button
        android:id="@+id/hireButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hire_me"
        android:layout_gravity="center_vertical"
        style="@style/materialButton" />

</LinearLayout>