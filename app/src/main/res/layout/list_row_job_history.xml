<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/zebenzi_white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:id="@+id/list_row_job_history_job_number_label"
                android:textColor="@color/zebenzi_dark_grey"
                android:textStyle="bold"
                android:text="Job "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:text="1000000"
                android:id="@+id/list_row_job_history_job_number"
                android:textColor="@color/zebenzi_dark_grey"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:text="Job Service Name"
                android:id="@+id/list_row_job_history_service_name"
                android:textColor="@color/zebenzi_dark_grey"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:text="Sat, 5 Dec 2015"
                android:id="@+id/list_row_job_history_job_date"
                android:textColor="@color/material_grey_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:text="08:00"
                android:id="@+id/list_row_job_history_job_time"
                android:textColor="@color/material_grey_700"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="Completed"
            android:id="@+id/list_row_job_history_job_status"
            android:textColor="@color/zebenzi_white"
            android:textStyle="bold"
            android:background="@color/zebenzi_primary_color"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:text="Firstname"
                android:id="@+id/list_row_job_history_worker_first_name"
                android:textColor="@color/material_grey_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:text="Lastname"
                android:id="@+id/list_row_job_history_worker_last_name"
                android:textColor="@color/material_grey_700"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="Worker Mobile Number"
            android:id="@+id/list_row_job_history_worker_mobile"
            android:textColor="@color/material_grey_700" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="You rated this job:"
            android:id="@+id/list_row_job_history_job_rating"
            android:textColor="@color/material_grey_700" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            style="@style/zebenziRatingBar"
            android:id="@+id/list_row_job_history_job_rating_bar"
            android:nestedScrollingEnabled="false"
            android:numStars="5"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list_row_worker_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/profile_pic_default"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/zebenzi_light_grey"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:text="R5000"
            android:id="@+id/list_row_job_history_price"
            android:textColor="@color/zebenzi_dark_grey"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"/>
    </LinearLayout>

