<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set AppCompat’s actionBarStyle -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/material_green_A200</item>
        <item name="colorPrimaryDark">@color/material_green_300</item>

        <!-- The rest of your attributes -->
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="MyActionBarStyle"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/material_deep_orange_700</item>
    </style>

</resources>
