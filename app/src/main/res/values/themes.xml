<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- the theme applied to the application or activity -->
    <style name="ZebenziDefaultTheme"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>-->
        <!--<item name="android:actionMenuTextColor">@color/material_deep_orange_700</item>-->
        <item name="colorPrimary">@color/zebenzi_primary_color</item>
        <item name="colorPrimaryDark">@color/zebenzi_primary_color_dark</item>
        <item name="colorAccent">@color/zebenzi_accent_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:dropDownListViewStyle">@style/spinnerDropDownListStyle</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!--<item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>-->
        <!--<item name="actionMenuTextColor">@color/material_deep_orange_700</item>-->
        <!--<item name="android:buttonStyle">@style/materialButton</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:iconifiedByDefault">true</item>
        <item name="android:icon">@drawable/ic_menu_zebenzi</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="iconifiedByDefault">true</item>
        <item name="icon">@drawable/ic_menu_zebenzi</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
           <!--parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">-->
        <item name="android:actionMenuTextColor">@color/material_grey_300</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/material_grey_300</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

<!--Popup Options Menu Style-->

    <style name="popUpTheme"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/zebenzi_primary_color_dark</item>
        <item name="android:colorBackground">@color/material_grey_300</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="materialButton">
        <!--<item name="style">@style/materialButtonText</item>-->
        <item name="android:textColor">@color/zebenzi_white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@color/zebenzi_accent_color</item>
    </style>

    <style name="HireMeButton">
        <item name="android:textColor">@color/zebenzi_white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@color/zebenzi_accent_color</item>
    </style>

    <style name="dateTimeButton">
        <item name="android:textColor">@color/zebenzi_black</item>
        <!--<item name="android:textAppearance">@android:attr/textAppearanceMedium</item>-->
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/button_date_time_ripple</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/zebenzi_primary_color_dark</item>
    </style>


    <style name="spinnerDropDownListStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:background">@drawable/text_field_border</item>
        <item name="android:divider">@color/zebenzi_light_grey</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textAppearance">@android:attr/textAppearanceMedium</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/zebenzi_black</item>
        <!--<item name="android:background">@color/material_grey_100</item>-->
        <!--<item name="android:textAppearance">@android:attr/textAppearanceMedium</item>-->
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

        <item name="android:textColor">@drawable/spinner_dropdown_textcolor</item>
        <item name="android:background">@drawable/spinner_dropdown_background</item>
        <item name="android:textAppearance">@android:attr/textAppearanceMedium</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingLeft">20sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>